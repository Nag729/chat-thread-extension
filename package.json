{
  "name": "chat-thread-extension",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "compile:content": "vue-cli-service build --no-clean src/main.js",
    "compile": "run-s compile:content",
    "copy:manifest": "cpx src/manifest.json dist/",
    "copy": "run-p copy:manifest",
    "remove": "rimraf dist/index.html",
    "build": "run-s compile copy remove",
    "zip": "run(){ zip -r -X releases/$1.zip dist; }; run",
    "release": "npm run build && npm run zip $1"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "vue": "^3.0.0-0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0-0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "cpx": "^1.5.0",
    "mkdirp2": "^1.0.4",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^7.0.0-0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "rimraf": "^3.0.0",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2"
  }
}
